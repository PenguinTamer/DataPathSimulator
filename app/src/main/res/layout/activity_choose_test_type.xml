<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseTestType"
    tools:layout_editor_absoluteY="81dp">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="121dp"
        android:layout_marginEnd="65dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="176dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/info_TextView_ChooseTestType"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="@string/info_activity_ChooseTestType"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="44dp"
            tools:layout_editor_absoluteY="172dp" />

        <Button
            android:id="@+id/acvitity_ChooseTestType_Button_DP_Sim"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="DP Sim"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="227dp" />

        <Button
            android:id="@+id/acvitity_ChooseTestType_Button_MultipleChoice"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Multiple Choice"
            tools:layout_editor_absoluteX="192dp"
            tools:layout_editor_absoluteY="227dp" />

    </LinearLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:menu="@menu/navigation" />

</android.support.constraint.ConstraintLayout>