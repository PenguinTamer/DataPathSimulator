<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DataPathSim">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="115dp"
        android:layout_marginTop="168dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/info_activity_DataPathSim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/info_activity_DataPathSim"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/dataPathSim_ALU_Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ALU" />

        <Button
            android:id="@+id/dataPathSim_Load_Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Load" />

        <Button
            android:id="@+id/dataPathSim_Store_Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Store" />

    </LinearLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:menu="@menu/navigation" />

</android.support.constraint.ConstraintLayout>